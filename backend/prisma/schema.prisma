generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  date        DateTime
  description String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}
